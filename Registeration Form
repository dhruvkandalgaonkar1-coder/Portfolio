            display: block;
            margin-top: 20px;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            max-width: 400px;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .gender-options {
            margin-top: 10px;
        }

        .gender-options label {
            margin-right: 20px;
            font-weight: normal;
        }

        .submit-button,
        .back-button {
            margin-top: 30px;
            padding: 10px 20px;
            background-color: #004080;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
        }

        .submit-button:hover,
        .back-button:hover {
            background-color: #0066cc;
        }

        #success-message {
            display: none;
            text-align: center;
        }

        #form-container {
            display: block;
        }
